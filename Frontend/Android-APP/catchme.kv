#:kivy 1.9.0

MDNavigationLayout:

    ScreenManager:
        id: screen_manager

        HomeWindow:
            name: 'home'
            id: home_window

            MDToolbar:
                id: toolbar
                title: "Home"
                pos_hint: {"top": 1}
                left_action_items: [['menu', lambda x: nav_drawer.set_state('toggle')]]
                elevation: 10
                md_bg_color: app.theme_cls.accent_color

            MDBoxLayout:
                orientation: 'vertical'
                pos_hint: {"top": 0.92}
                md_bg_color: [10/255, 4/255, 41/255,0.65]

                MDBoxLayout:
                    orientation: 'vertical'
                    pos_hint: {"top": 0.8}
                    md_bg_color: [10/255, 4/255, 41/255,0.65]
                    padding: "23dp"
                    spacing: 9
                    Label:
                        size_hint_y: None
                        height: self.texture_size[1]
                        text_size: self.width,None
                        text: "Was ist 'CatchMe' ?"
                        font_size: "30sp"
                        halign: "center"
                    MDSeparator:
                        height: "2dp"
                    ScrollView:
                        Label:
                            id: home_catchme_info_text
                            size_hint_y: None
                            height: self.texture_size[1]
                            text_size: self.width,None
                            font_size: "17sp"
                            halign: "left"
                            text: home_window.info_text
                
        CreateWindow:
            name: 'create'
            id: create_window

            MDToolbar:
                title: "Spiel erstellen"
                pos_hint: {"top": 1}
                right_action_items: [['menu', lambda x: nav_drawer.set_state('toggle')]]
                elevation: 10
                md_bg_color: app.theme_cls.accent_color
                left_action_items: [["arrow-left", lambda x: setattr(screen_manager, 'current', 'home')]]
            
            MDBoxLayout:
                orientation: "vertical"
                spacing: 5
                size_hint: (1,0.6)
                pos_hint: {"top": 0.9}

                MDBoxLayout:
                    orientation: 'vertical'
                    padding: "55dp"
                    spacing: 10
                    adaptive_height: True
                    pos_hint: {"top": 1}
                    spacing: "18dp"
                    halign: "center"

                    MDTextField:
                        id: create_game_name_textfield
                        mode: "fill"
                        font_style: "H3"
                        icon_left: "format-letter-case"
                        hint_text: "Spiel-Name"
                        normal_color: [236/255, 234/255, 240/255, 1]
                        color_active: [206/255,177/255,216/255,1]

                    MDTextField:
                        mode: "fill"
                        icon_left: "key"
                        hint_text: "Spiel-Passwort"
                        password: True
                        id: create_game_password_textfield
                        normal_color: [236/255, 234/255, 240/255, 1]
                        color_active: [206/255,177/255,216/255,1]
                        IconLeftWidget:
                            icon: "key"
                            theme_text_color: "Custom"

                MDBoxLayout:
                    orientation: 'vertical'
                    padding: 20
                    


                MDFillRoundFlatButton:
                    text: "Erstellen"
                    halign: "center"
                    pos_hint: {"center_x": 0.5,"center_y": 0.5}
                    font_style: "H6"
                    on_press: create_window.create(create_game_name_textfield,create_game_password_textfield)

        ParticipateWindow:
            id: participate_window
            name: 'participate'

            MDToolbar:
                title: "Spiel beitreten"
                pos_hint: {"top": 1}
                right_action_items: [['menu', lambda x: nav_drawer.set_state('toggle')]]
                left_action_items: [["arrow-left", lambda x: setattr(screen_manager, 'current', 'home')]]
                elevation: 10
                md_bg_color: app.theme_cls.accent_color

            MDBoxLayout:
                orientation: 'vertical'
                padding: "40dp"
                adaptive_height: True
                pos_hint: {"top": 0.8}
                spacing: "18dp"
                halign: "center"

                MDTextField:
                    id: participate_game_id_textfield
                    hint_text: "Spiel-ID"
                    mode: "rectangle"
                    font_style: "H3"
                    icon_left: "shield-key"
                    

                MDTextField:
                    mode: "rectangle"
                    icon_left: "key"
                    id: participate_game_password_textfield
                    hint_text: "Passwort"
                    password: True
                    normal_color: [236/255, 234/255, 240/255, 1]
                    color_active: [206/255,177/255,216/255,1]
                
                MDTextField:
                    mode: "rectangle"
                    icon_left: "account"
                    id: participate_game_player_nickname_textfield
                    hint_text: "Nickname"
                    password: False
                    normal_color: [236/255, 234/255, 240/255, 1]
                    color_active: [206/255,177/255,216/255,1]
            

                MDFillRoundFlatButton:
                    text: "Mitspielen"
                    pos_hint: {"center_x": 0.5,"center_y": 0.5}
                    font_style: "H6"
                    on_press: participate_window.participate(participate_game_password_textfield,participate_game_id_textfield,participate_game_player_nickname_textfield)
                   
                    

    MDNavigationDrawer:
        id: nav_drawer
        

        BoxLayout:
            orientation: 'vertical'
            spacing: '15dp'
            padding: '0dp'

            Image:
                source: 'logo.png'
                pos_hint: {'x':0,'y':0}
                size: self.size

            MDLabel:
                text: "CatchMe"
                font_style: 'Subtitle1'
                size_hint_y: None
                height: self.texture_size[1]
                halign: "center"
                font_style: "H2"
                color: [75/255,10/255,99/255] 
                bold: True
                markup: False

            MDLabel:
                text: "Catch your friends!"
                font_style: 'Caption'
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]
                font_style: "H5"

            MDSeparator:
                height: "2dp"

            ScrollView:
                MDList:
                    OneLineIconListItem:
                        text: 'Spiel beitreten'
                        halign: "left"
                        on_release: 
                            screen_manager.current = "participate"
                            nav_drawer.set_state("close")
                            screen_manager.transition.direction = "right"

                        IconLeftWidget:
                            icon: "connection"

                    OneLineIconListItem:
                        text: 'Spiel erstellen'      
                        halign: "left"
                        on_release: 
                            screen_manager.current = "create"
                            nav_drawer.set_state("close")
                            screen_manager.transition.direction = "left"

                        IconLeftWidget:
                            icon: "pencil-plus"
                            theme_text_color: "Custom"
                            
                            
                            
                            
                            